package  {	import Game;		public class Player {		private static const INITMONEY:Number = 30; //$30 to start off with		private static const MAXHEALTH:Number = 5; // this is the number of creeps that can reach the goal		private var _health:Number = 0;		private var _money:Number  = 0;		private var game:Game;				public function Player(l_game:Game) {			game	= l_game;			_health  = MAXHEALTH;			_money   = INITMONEY;			updateMoney ( 0 ); //setting money to INITMONEY			updateHealth( 0 );		}				public function updateMoney( val:Number ):Number{			_money += val;			game.dashBoard.moneyBox.update( _money );			return _money;		}				public function updateHealth( val:Number ):Number{			_health += val;			game.dashBoard.healthBox.update( _health );			if( _health <= 0 ){				game.gameover( );			}			return _health;		}		public function get money( ):Number{			return _money;		}				public function get health( ):Number{			return _health;		}	}}