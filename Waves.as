package  {	import Game;	import Monsters;	import Field;		public class Waves {		private var _game:Game;		private var _maxwaves:Number;		private var _nwaves:Number;		private var _nround:Array;		public  var monsters:Monsters;				public function Waves( game:Game, maxwaves:Number ) {			_game 		= game;			_maxwaves	= maxwaves;			_nround		= [ 10, 20, 30, 35 ];			reset( );		}				public function nextWave( ){			if( _nwaves < (_maxwaves-1) ){				_nwaves++;				monsters  = new Monsters(this, _game, _nround[_nwaves]);				_game.addChild( monsters );				_game.field.setMonsters( monsters );				beginAttack( );			}else{				_game.gameover( Game.WON ); //gameover - the player has won			}		}				public function reset( ){			_nwaves		= 0;						monsters  = new Monsters(this, _game, _nround[_nwaves]);			_game.addChild( monsters );			_game.field.setMonsters( monsters );		}				public function beginAttack( ){			_game.field.fieldmode = Field.COMBAT;			_game.field.enableTowerRange( );			monsters.addToField( );		}				public function endAttack( ){	 //happens only on game over. 			monsters.removeFromField( ); //else all monsters will be removed for the next wave to begin.			_game.field.disableTowerRange( );			_game.field.fieldmode = Field.NOCHANGE;		}	}	}